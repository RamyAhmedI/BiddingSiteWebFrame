{% extends 'base.html.twig' %}

{% block title %}ShippingDetails index{% endblock %}

{% block body %}
    <h1>ShippingDetails index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProductName</th>
                <th>Price</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shipping_detail in shipping_details %}
            <tr>
                <td>{{ shipping_detail.id }}</td>
                <td>{{ shipping_detail.productName }}</td>
                <td>{{ shipping_detail.price }}</td>
                <td>{{ shipping_detail.address }}</td>
                <td>
                    <a href="{{ path('app_shipping_details_show', {'id': shipping_detail.id}) }}">show</a>
                    <a href="{{ path('app_shipping_details_edit', {'id': shipping_detail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_shipping_details_new') }}">Create new</a>
    {% endif %}
{% endblock %}
